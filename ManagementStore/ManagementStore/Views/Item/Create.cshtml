                        @Html.EditorFor(model => model.Item_ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Item_ID, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Mã hàng hóa:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Item_Code, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Item_Code, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Tên hàng hóa:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Nhóm hàng hóa:</div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.GroupItem_ID, new SelectList(ViewBag.Item_Group, "GroupItem_ID", "Name"), "-- Select --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GroupItem_ID, "", new { @class = "text-danger" })
                </div>
                @*<div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">GroupItem_Sub_ID:</div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.GroupItem_Sub_ID, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GroupItem_Sub_ID, "", new { @class = "text-danger" })
                    </div>*@
            </div>

            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Số tiền giảm giá:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.AmountSale, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AmountSale, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Số tiền mua ban đầu:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.AmountOrigin, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AmountOrigin, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Số dư:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Blance, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Blance, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Chọn màu:</div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.Item_Color_ID, new SelectList(ViewBag.MaChuDe, "Item_Color_ID", "Name"), "-- Select --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item_Color_ID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Chất liệu:</div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.Item_Material_ID, new SelectList(ViewBag.Item_Material, "Item_Material_ID", "Name"), "-- Select --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item_Material_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Chọn size:</div>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.Item_Size_ID, new SelectList(ViewBag.Item_Size, "Item_Size1", "Name"), "-- Select --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item_Size_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Đơn vị tính:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Unit, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Số tiền ship:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.AmountShip, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AmountShip, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">

                <div class="col-md-2 control-label" style="font-size:14px; font-weight:bold;">Mô tả:</div>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>
    }
    <div class="form-group">
        <div class="jumbotron">
            <form action="~/Item/Upload" class="dropzone" id="dropzoneJsForm" style="background-color:#00BFFF"></form>
            @*<button id="submit-all">
                Submit All Files
            </button>*@
        </div>
    </div>

