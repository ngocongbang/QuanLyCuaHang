            // next
            function Next() {
                var b = parseInt($('#pageCurrent').val().toString()) + 1;
                var itotalpage = parseInt($('#totalPage').text());
                $('#pageCurrent').val(b);
                if (itotalpage <= b) {
                    $('#pageCurrent').val(itotalpage);
                }
            }
            function Back() {
                var b = parseInt($('#pageCurrent').val().toString()) - 1;
                if (b == 0) {
                    b = 1;
                }
                $('#pageCurrent').val(b);
            }
            function ResetValue() {
                $('#SearchCustomerCode').val(null);
