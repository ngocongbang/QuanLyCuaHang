@model ManagementStore.Business.Customers.CustomerModel

@{
    ViewBag.Title = "Chi tiết khách hàng ";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<div>
    <h4>Khách hàng</h4>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display:none;">
            <div class="col-md-2 control-label">Mã KH:</div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Customer_ID, new { @class = "form-control col-md-3" })
            </div>
        </div>
        <!-- Image -->
        <div class="col-sm-2">
            <img id="id-mage-customer" src="@Url.Content(Model.Url)" width="150" height="200" />
        </div>
        <!-- Infor -->
        <div class="col-sm-10">
            <div class="form-group">
                <div class="col-sm-2 control-label lable-font-size">Loại khách hàng:</div>
                <div class="col-sm-3 control-label-form">
                    @if (Model.Category == "1")
                    {
                        <text>Cá nhân</text>
                    }
                    @if (Model.Category == "2")
                    {
                        <text>Công ty</text>
                    }

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 control-label lable-font-size">Mã khách hàng:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Customer_Code)

                </div>
                @*email*@
                <div class="col-sm-2 control-label lable-font-size">Mã số thuế:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Tax_Code, new { @class = "form-control col-sm-3" })
                </div>
            </div>
            <div class="form-group">
                @*Tên khách hàng*@
                <div class="col-sm-2 control-label lable-font-size">Tên khách hàng:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Name, new { @class = "form-control col-sm-3" })

                </div>
                @*gioi tinh*@
                <div class="col-sm-2 control-label lable-font-size">Giới tính:</div>
                <div class="col-sm-3 control-label-form">
                    @if (Model.Sex == "1")
                    {
                        <text>Nam</text>
                    }
                    @if (Model.Sex == "2")
                    {
                        <text>Nữ</text>
                    }
                </div>
            </div>
            <div class="form-group">
                @*điện thoại*@
                <div class="col-sm-2 control-label lable-font-size">Điện thoại:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Phone, new { @class = "form-control col-sm-3" })
                  
                </div>
                <div class="col-sm-2 control-label lable-font-size">Email:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Email, new { @class = "form-control col-sm-3" })                   
                </div>
            </div>
            <div class="form-group">
                @*ngày sinh*@ 
                <div class="col-sm-2 control-label lable-font-size">Ngày sinh:</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Birthday, new { @class = "form-control col-sm-3" })                
                </div>
                @*Địa chỉ*@
                <div class="col-sm-2 control-label lable-font-size">Địa chỉ</div>
                <div class="col-sm-3 control-label-form">
                    @Html.DisplayFor(model => model.Address, new { @class = "form-control col-sm-3" })                    
                </div>
            </div>
            <div class="form-group">
                @*ngày sinh*@
                <div class="col-sm-2 control-label lable-font-size">Ghi chú:</div>
                <div class="col-sm-10 control-label-form">
                    @Html.DisplayFor(model => model.Note, new { @class = "form-control col-sm-10 note-height200" })
                   
                </div>

            </div>

        </div>
        <!-- end Infor -->
    </div>

</div>
<p>
    @Html.ActionLink("Back", "Index")
</p>
