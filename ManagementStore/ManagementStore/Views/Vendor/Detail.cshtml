@model ManagementStore.Business.Vendors.VendorModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<div style="width:100%; position:relative;border-style: none none double none; border-color: #b4d0e2; margin-top: -5px; height: 30px;">
    <div style="width:90%;">
        <h4 class="box-title cl" style=""><i class="glyphicon glyphicon-list-alt"></i>   <span>Chi tiết nhà cung cấp</span></h4>
    </div>
</div>
<div style="clear:both;"></div>
<div style="margin-top:10px;">

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-2 control-label" style="font-size:14px;"></div>
            <div class="col-sm-3 control-label-form">
                <button id="btnupdate" class="btn btn-success" type="button" title="Alt+U" keyboard key-combo="alt+u" key-combo-pressed="edit()">
                    <a href="@Url.Action("Update",new { @id = Model.Vendor_ID})">
                        <span style="color:black;">Cập nhật</span>
                    </a>
                </button>
                <button id="btnupdate" class="btn btn-default" type="button" title="Alt+U" keyboard key-combo="alt+u" key-combo-pressed="edit()">
                    <a href="@Url.Action("Index")">
                        <span style="color:black;">Đóng</span>
                    </a>
                </button>
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label" style="font-size:14px; font-weight:bold;">Mã nhà cung cấp:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Vendor_Code, new { @class = "control-label col-md-3" })
            </div>
            @*email*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Email:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Email, new { @class = "control-label col-md-3" })
            </div>
        </div>

        <div class="form-group">
            @*Tên nhà cung cấp*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Tên nhà cung cấp:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Name, new { @class = "control-label col-md-3" })
            </div>
            @*ten cong ty*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Tên công ty:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Company_Name, new { @class = "control-label col-md-3" })
            </div>
        </div>

        <div class="form-group">
            @*điện thoại*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Điện thoại:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Phone, new { @class = "control-label col-md-3" })
            </div>
            @*Mã số thuế*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Mã số thuế:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Tax_Code, new { @class = "control-label col-md-3" })
            </div>
        </div>

        <div class="form-group">
            @*Địa chỉ*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Địa chỉ:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Address, new { @class = "control-label col-md-3" })
            </div>
            @*Nhóm nhà cung cấp*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Nhóm nhà cung cấp:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Group_Vendor, new { @class = "control-label col-md-3" })
            </div>
        </div>

        <div class="form-group">
            @*Khu vực*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Vùng miền:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.Region, new { @class = "control-label col-md-3" })
            </div>
            @*Xã phường*@
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Xã phường:</div>
            <div class="col-sm-3 control-label-form">
                @Html.DisplayFor(model => model.CommuneWard, new { @class = "control-label col-md-3" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label" style="font-size:14px;font-weight:bold;">Ghi chú:</div>
            <div class="col-sm-8 control-label-form">
                @Html.DisplayFor(model => model.Note, new { @class = "control-label col-md-3" })
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    </div>