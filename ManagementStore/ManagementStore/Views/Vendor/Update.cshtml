@model ManagementStore.Business.Vendors.VendorModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<div style="width:100%; position:relative;border-style: none none double none; border-color: #b4d0e2; margin-top: -5px; height: 30px;">
    <div style="width:90%;">
        <h4 class="box-title cl" style=""><i class="glyphicon glyphicon-list-alt"></i>   <span>Cập nhật nhà cung cấp</span></h4>
    </div>
</div>
<div style="clear:both;"></div>
<div style="margin-top:10px;">
    @using (Html.BeginForm("Update", "Vendor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @*<button id="btnupdate" class="btn btn-default" type="button" title="Alt+U" keyboard key-combo="alt+u" key-combo-pressed="edit()">
                            <a href="@Url.Action("Index")">
                                <span style="color:black;">Đóng</span>
                            </a>
                        </button>*@
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="display:none;">
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Mã nhà cung cấp:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Vendor_ID, new { @class = "form-control col-md-3" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Mã nhà cung cấp:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Vendor_Code, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Vendor_Code, "", new { @class = "text-danger" })
                </div>
                @*email*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Email:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*Tên nhà cung cấp*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Tên nhà cung cấp:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                @*ten cong ty*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Tên công ty:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Company_Name, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Company_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*điện thoại*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Điện thoại:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
                @*Mã số thuế*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Mã số thuế:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Tax_Code, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Tax_Code, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*Địa chỉ*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Địa chỉ:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
                @*Nhóm nhà cung cấp*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Nhóm nhà cung cấp:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Group_Vendor, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Group_Vendor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*Khu vực*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Vùng miền:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Region, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger" })
                </div>
                @*Xã phường*@
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Xã phường:</div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.CommuneWard, new { @class = "form-control col-md-3" })
                    @Html.ValidationMessageFor(model => model.CommuneWard, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label" style="font-size:14px;font-weight:bold;">Ghi chú:</div>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>