@model IEnumerable<ManagementStore.Business.Vendors.VendorModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped" style="border:1px solid #E4E6E9;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vendor_Code)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <b>Nợ cần trả hiện tại</b>
        </th>
        <th>
            <b>Tổng mua</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td></td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>


                <span>
                    <a href="@Url.Action("Update",new { @id = item.Vendor_ID})">
                        <img src="/assets/images/action/new-24-256.png" style="width:20px;"/>
                    </a>
                </span>
                <span>
                    <a href="@Url.Action("Detail",new { @id = item.Vendor_ID})">
                        <img src="/assets/images/action/detail.png" style="width:20px;"/>
                    </a>
                </span>
                <span>
                    <a href="@Url.Action("Delete",new { @id = item.Vendor_ID})">
                        <img src="/assets/images/action/delete.png" style="width:20px;"/>
                    </a>
                </span>
            </td>
        </tr>
    }

</table>
